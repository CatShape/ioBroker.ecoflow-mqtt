{
	"i18n": true,
	"type": "tabs",
	"items": {
		"tab_1": {
			"type": "panel",
			"label": "Credentials & Debug Settings",
			"items": {
				"_userdata": {
					"newLine": true,
					"type": "header",
					"text": "User Data",
					"sm": 12,
					"md": 12,
					"lg": 12,
					"size": 3
				},
				"userName": {
					"type": "text",
					"label": "ecoflow account name / email  ",
					"newLine": false
				},
				"userPassword": {
					"type": "password",
					"visible": true,
					"label": "user password",
					"newLine": false
				},
				"_create": {
					"type": "sendTo",
					"label": "Create Login Data",
					"command": "create",
					"variant": "outlined",
					"jsonData": "{\"user\": \"${data.userName}\", \"pass\": \"${data.userPassword}\"}",
					"useNative": true
				},
				"_connection": {
					"newLine": true,
					"type": "header",
					"text": "Connection settings",
					"sm": 12,
					"md": 12,
					"lg": 12,
					"size": 3
				},
				"mqttUrl": {
					"type": "text",
					"label": "mqtt broker",
					"newLine": false
				},
				"mqttPort": {
					"type": "text",
					"label": "mqtt port",
					"newLine": false
				},
				"_auth": {
					"newLine": true,
					"type": "header",
					"text": "MQTT Authentication settings",
					"sm": 12,
					"md": 12,
					"lg": 12,
					"size": 3
				},
				"mqttUserId": {
					"type": "text",
					"label": "mqtt userId",
					"newLine": false,
					"sm": 12,
					"md": 6,
					"lg": 4
				},
				"mqttUserName": {
					"type": "text",
					"label": "mqtt user name",
					"newLine": false,
					"sm": 12,
					"md": 6,
					"lg": 4
				},
				"mqttPwd": {
					"type": "password",
					"visible": true,
					"label": "mqtt pwd",
					"newLine": true,
					"sm": 12,
					"md": 6,
					"lg": 4
				},
				"mqttClientId": {
					"type": "text",
					"label": "mqtt clientId",
					"newLine": false,
					"sm": 12,
					"md": 6,
					"lg": 4
				},
				"enableMqttReconnect": {
					"type": "checkbox",
					"label": "enable check for reconnects (10min)",
					"newLine": true,
					"sm": 12,
					"md": 6,
					"lg": 4
				},
				"_test": {
					"type": "sendTo",
					"hidden": "true",
					"label": "Test connection",
					"command": "test",
					"variant": "contained",
					"jsonData": "{\"user\": \"${data.mqttUserName}\", \"pass\": \"${data.mqttPwd}\", \"url\": \"${data.mqttUrl}\", \"port\": ${data.mqttPort}, \"clientId\": \"${data.mqttClientId}\"}"
				},
				"_debugcommon": {
					"newLine": true,
					"type": "header",
					"text": "common DEBUG settings",
					"sm": 12,
					"md": 12,
					"lg": 12,
					"size": 3
				},
				"msgStateCreation": {
					"type": "checkbox",
					"label": "msgStateCreation",
					"sm": 12,
					"md": 6,
					"lg": 4
				},
				"getQuota": {
					"type": "sendTo",
					"hidden": "false",
					"label": "Debug Quotas",
					"command": "quota",
					"variant": "contained",
					"jsonData": "{\"quota\"}",
					"sm": 12,
					"md": 6,
					"lg": 4
				},
				"_debugpstation": {
					"newLine": true,
					"type": "header",
					"text": "Powerstation / Wave / Glacier DEBUG settings",
					"sm": 12,
					"md": 12,
					"lg": 12,
					"size": 3
				},
				"msgUpdatePstation": {
					"type": "checkbox",
					"label": "msgUpdate",
					"sm": 12,
					"md": 6,
					"lg": 4
				},
				"msgUpdateValuePstation": {
					"type": "checkbox",
					"label": "msgUpdateValue",
					"sm": 12,
					"md": 6,
					"lg": 4
				},
				"msgSetGetPstation": {
					"type": "checkbox",
					"label": "msgSetGet",
					"sm": 12,
					"md": 6,
					"lg": 4
				},
				"msgCmdPstation": {
					"type": "checkbox",
					"label": "msgCmd",
					"sm": 12,
					"md": 6,
					"lg": 4
				},
				"_debugpstream": {
					"newLine": true,
					"type": "header",
					"text": "Powerstream/ SmartPlug DEBUG settings",
					"sm": 12,
					"md": 12,
					"lg": 12,
					"size": 3
				},
				"msgUpdatePstream": {
					"type": "checkbox",
					"label": "msgUpdate",
					"sm": 12,
					"md": 6,
					"lg": 4
				},
				"msgUpdateValuePstream": {
					"type": "checkbox",
					"label": "msgUpdateValue",
					"sm": 12,
					"md": 6,
					"lg": 4
				},
				"msgSetGetPstream": {
					"type": "checkbox",
					"label": "msgSetGet",
					"sm": 12,
					"md": 6,
					"lg": 4
				},
				"msgCmdPstream": {
					"type": "checkbox",
					"label": "msgCmd",
					"sm": 12,
					"md": 6,
					"lg": 4
				},
				"msgUnknownMsgPstream": {
					"type": "checkbox",
					"label": "msgUnknownMsg",
					"sm": 12,
					"md": 6,
					"lg": 4
				},
				"showHex": {
					"type": "checkbox",
					"label": "showHex",
					"sm": 12,
					"md": 6,
					"lg": 4
				}
			}
		},
		"tab_2": {
			"type": "panel",
			"label": "Device(s) Configuration",
			"items": {
				"_pstremHeader": {
					"newLine": true,
					"type": "header",
					"text": "Power Stream Configuration",
					"sm": 12,
					"md": 12,
					"lg": 12,
					"size": 3
				},
				"_introTable1Txt1": {
					"type": "staticText",
					"text": "Please add (+) a device and configure it with its name, Serial Number (id) and it's type. If you have no device, delete the added line item",
					"newLine": true
				},
				"pstreams": {
					"sm": 12,
					"newLine": true,
					"type": "table",
					"label": "My configured Powerstream(s)",
					"items": [
						{
							"type": "text",
							"width": "20%",
							"title": "name",
							"attr": "devName",
							"filter": false,
							"sort": false,
							"default": "My Pstream1"
						},
						{
							"type": "text",
							"width": "20%",
							"title": "id",
							"attr": "devId",
							"filter": false,
							"sort": false,
							"default": "HW51"
						},
						{
							"type": "select",
							"width": "20%",
							"options": [
								{ "value": "none", "label": "none" },
								{ "value": "pstream600", "label": "Powerstream 600W" },
								{ "value": "pstream800", "label": "Powerstream 800W" }
							],
							"title": "Powerstream Type",
							"attr": "devType",
							"filter": false,
							"sort": false,
							"default": "none"
						}
					]
				},
				"_pstationHeader": {
					"newLine": true,
					"type": "header",
					"text": "Power Station Configuration",
					"sm": 12,
					"md": 12,
					"lg": 12,
					"size": 3
				},
				"_introTable1Txt2": {
					"type": "staticText",
					"text": "Please add (+) a device and configure it with its name, Serial Number (id) and it's type. If you have additional batteries connected, check the slave port#. If you have no device, delete the added line item",
					"newLine": true
				},
				"pstations": {
					"sm": 12,
					"newLine": true,
					"type": "table",
					"label": "My configured Powerstation(s)",
					"items": [
						{
							"type": "text",
							"attr": "devName",
							"width": "20%",
							"title": "Name",

							"filter": false,
							"sort": false,
							"default": "My Station#1"
						},
						{
							"type": "text",
							"width": "20%",
							"title": "id",
							"attr": "devId",
							"filter": false,
							"sort": false,
							"default": "Dxxxx/Rxxxx"
						},
						{
							"type": "select",
							"width": "30%",
							"options": [
								{ "value": "none", "label": "none" },
								{ "value": "deltamini", "label": "Delta Mini (882Wh)" },
								{ "value": "delta", "label": "Delta (1260Wh)" },
								{ "value": "deltamax", "label": "Delta Max (1600/2000)" },
								{ "value": "deltapro", "label": "Delta Pro" },
								{ "value": "delta2", "label": "Delta 2" },
								{ "value": "delta2max", "label": "Delta 2 Max" },
								{ "value": "rivermax", "label": "River Max" },
								{ "value": "riverpro", "label": "River Pro" },
								{ "value": "river2max", "label": "River 2 Max" },
								{ "value": "river2pro", "label": "River 2 Pro" }
							],
							"title": "Power Station Type",
							"attr": "devType",
							"filter": false,
							"sort": false,
							"default": "none"
						},
						{
							"type": "checkbox",
							"title": "Slave 1",
							"width": "10%",
							"hidden": "data.devType !== 'deltapro' && data.devType !== 'deltamax' && data.devType !== 'delta2max' && data.devType !== 'delta' && data.devType !== 'delta2'",
							"attr": "pstationsSlave1",
							"filter": false,
							"sort": false,
							"default": false
						},
						{
							"type": "checkbox",
							"title": "Slave 2",
							"width": "10%",
							"hidden": "data.devType !== 'deltapro' && data.devType !== 'deltamax' && data.devType !== 'delta2max' ",
							"attr": "pstationsSlave2",
							"filter": false,
							"sort": false,
							"default": false
						}
					]
				},
				"_plugHeader": {
					"newLine": true,
					"type": "header",
					"text": "Plug Configuration",
					"sm": 12,
					"md": 12,
					"lg": 12,
					"size": 3
				},
				"_introTable1Txt3": {
					"type": "staticText",
					"text": "Please add (+) a device and configure it with its name, Serial Number (id) and it's type. If you have no device, delete the added line item",
					"newLine": true
				},
				"plugs": {
					"sm": 12,
					"newLine": true,
					"type": "table",
					"label": "My configured Plug(s)",
					"items": [
						{
							"type": "text",
							"width": "20%",
							"title": "name",
							"attr": "devName",
							"filter": false,
							"sort": false,
							"default": "My Plug1"
						},
						{
							"type": "text",
							"width": "20%",
							"title": "id",
							"attr": "devId",
							"filter": false,
							"sort": false,
							"default": "HW52"
						},
						{
							"type": "select",
							"width": "20%",
							"options": [ { "value": "none", "label": "none" }, { "value": "plug", "label": "Plug" } ],
							"title": "Plug Type",
							"attr": "devType",
							"filter": false,
							"sort": false,
							"default": "none"
						}
					]
				}
			}
		},
		"tab_3": {
			"type": "panel",
			"label": "Wave / Glacier Configuration",
			"items": {
				"_waveHeader": {
					"newLine": true,
					"type": "header",
					"text": "Wave Configuration",
					"sm": 12,
					"md": 12,
					"lg": 12,
					"size": 3
				},
				"_introTable1Txt1": {
					"type": "staticText",
					"text": "Please add (+) a device and configure it with its name, Serial Number (id) and it's type. If you have no device, delete the added line item",
					"newLine": true
				},
				"waves": {
					"sm": 12,
					"newLine": true,
					"type": "table",
					"label": "My configured Wave(s)",
					"items": [
						{
							"type": "text",
							"width": "20%",
							"title": "name",
							"attr": "devName",
							"filter": false,
							"sort": false,
							"default": "My Wave1"
						},
						{
							"type": "text",
							"width": "20%",
							"title": "id",
							"attr": "devId",
							"filter": false,
							"sort": false,
							"default": "KT21.."
						},
						{
							"type": "select",
							"width": "20%",
							"options": [
								{ "value": "none", "label": "none" },
								{ "value": "wave", "label": "Wave Air Con" }
							],
							"title": "Wave Type",
							"attr": "devType",
							"filter": false,
							"sort": false,
							"default": "none"
						}
					]
				},
				"_glacierHeader": {
					"newLine": true,
					"type": "header",
					"text": "Glacier Configuration",
					"sm": 12,
					"md": 12,
					"lg": 12,
					"size": 3
				},
				"_glacierTable1Txt1": {
					"type": "staticText",
					"text": "Please add (+) a device and configure it with its name, Serial Number (id) and it's type. If you have no device, delete the added line item",
					"newLine": true
				},
				"glaciers": {
					"sm": 12,
					"newLine": true,
					"type": "table",
					"label": "My configured Glacier(s)",
					"items": [
						{
							"type": "text",
							"width": "20%",
							"title": "name",
							"attr": "devName",
							"filter": false,
							"sort": false,
							"default": "My Glacier1"
						},
						{
							"type": "text",
							"width": "20%",
							"title": "id",
							"attr": "devId",
							"filter": false,
							"sort": false,
							"default": "BX11.."
						},
						{
							"type": "select",
							"width": "20%",
							"options": [
								{ "value": "none", "label": "none" },
								{ "value": "glacier", "label": "Glacier Cooler" }
							],
							"title": "Glacier Type",
							"attr": "devType",
							"filter": false,
							"sort": false,
							"default": "none"
						}
					]
				}
			}
		}
	}
}
